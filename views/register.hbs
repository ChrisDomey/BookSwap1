<body class="bookswap-body">
    <div class="register-bookswap-icon pt-30">
        <img class="register-logo" src="img/bookswap_vert.png" alt="Icon">
    </div>
    
    <div class="form-container">
        <h1 class="title pb-20">{{title}}</h1>
        {{#if errors}} {{#each errors}}
        <div class="alert alert-danger" role="alert">
            {{this.msg}}
        </div>
        {{/each}} {{/if}} {{#if dbError}}
        <div class="alert alert-danger" role="alert">
            {{dbError}}
        </div>
        {{/if}}

        <div class="form-container">
            <form method="POST" action="register">
                <div class="form-group">
                    <input type="text" class="register-bookswap-textField" id="login" required name="username" placeholder="Username">
                </div>
                
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <input type="text" class="register-bookswap-textField" id="login" required name="firstName" placeholder="First Name" style="width: 256px;">
                        </div>
                        
                        <div class="col">
                            <input type="text" class="register-bookswap-textField" id="login" placeholder="Last Name" name="lastName" style="width: 256px;">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="email" class="register-bookswap-textField" id="login" required name="email" placeholder="name@domain.com">
                </div>
                <div class="form-group">
                    <input type="password" class="register-bookswap-textField" id="login" required name="password1" placeholder="Password">
                </div>
                <div class="form-group">
                    <input type="password" class="register-bookswap-textField" id="login" required name="password2" placeholder="Re-enter Password">
                </div>

                <div class="text-center pt-15">
                    <button type="submit" class="btn sign-in-button btn-lg" id="round">SIGN UP ></button>
                </div>
            </form>
        </div>
    </div>
</body>
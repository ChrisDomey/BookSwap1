<body class="bookswap-body-white">


	<div class="form-container-wishlist">
	    <h1 class="text-color2 pt-50">Wish List</h1> 
		<h4 class="text-color2">{{data.length}} {{bookNumber data.length}}</h4>  
	    <div>
	        {{#each data}}
	        <hr>

	        <div class="wishlist-entry pb-30">
	        	<div class="book-img">
	        		<img class="book-img-element" src="img/no-image-available.jpg">
	        	</div>

				<div class="wishlist-details">
					<h2 class="wishlist-details-title">{{this.book.title}}</h2>
					<h5 class="wishlist-details-name">By <span class="wishlist-details-value">{{this.book.author}}</span></h5>

					<div class="wishlist-details-left">
						<h5 class="wishlist-details-name">Published <span class="wishlist-details-value">by {{this.book.publisher}}</span></h5>
						<h5 class="wishlist-details-name">ISBN: <span class="wishlist-details-value">{{this.ISBN}}</span></h5>
					</div>

					<div class="wishlist-details-right">
						<h5 class="wishlist-details-name">Edition Number: <span class="wishlist-details-value">{{this.book.edition}}</span></h5>
						<h5 class="wishlist-details-name">Binding: <span class="wishlist-details-value">{{this.book.state}}</span></h5>
					</div>
				</div>

				<div class="wishlist-additional">
					<form action="/viewresults/{{this.ISBN}}">
						<button type="submit" class="btn btn-lg blue-btn viewresults-button-size" id="round">VIEW RESULTS > </button>
					</form>
					<form>
						<button type="submit" class="btn btn-lg wishlist-delete-entry">X</button>
					</form>
				</div>
	        </div>
	        {{/each}}
	    </div>
	</div>

</body>
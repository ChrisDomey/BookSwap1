<body class="bookswap-body">
    <div class="register-bookswap-icon pt-30">
        <img class="pr-10" src="img/bookswap_vert.png" alt="Icon" style="width: 300px;">
    </div>
    <div class="form-container">
        <h1 class="title">{{title}}</h1>
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}
        <br/>
        <br/>
        <form method="POST" action="login">
            <div class="input-group" style="margin: auto;
    margin-bottom: 15px;">
                <span class="login-bookswap-textField input-group-addon glyphicon glyphicon-user" style="    "></span>
                <input type="text" class="login-bookswap-textField" id="login" required name="username" placeholder="Email Address">
            </div>
            
            <div class="input-group" style="margin: auto;
    margin-bottom: 15px;">
                <span class="login-bookswap-textField input-group-addon glyphicon glyphicon-lock" style="    padding: 6px 12px;
    font-size: 14px; font-weight: normal; line-height: 1;
    text-align: center; margin-bottom: 2px !important;
    border: 1px solid #fff;"></span>
                <input type="password" class="login-bookswap-textField" id="login" required name="password" placeholder="Password">
            </div>

            <div class="text-center pt-15">
                <button type="submit" class="btn sign-in-button btn-lg" id="round">SIGN IN ></button>
            </div>
            
        </form>
    </div>
</body>  
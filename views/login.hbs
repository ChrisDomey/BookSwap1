<body class="bookswap-body">
    <div class="register-bookswap-icon pt-30">
        <img class="login-logo" src="img/bookswap_vert.png" alt="Icon">
    </div>

    <h1 class="title pb-40">{{title}}</h1>

    <div class="form-container">
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            {{error}}
        </div>
        {{/if}}

        <form method="POST" action="login">
            <div class="input-group pb-15">
                <span class="login-bookswap-textField input-group-addon glyphicon glyphicon-user" style="margin-bottom: 1px !important;"></span>
                <input type="text" class="login-bookswap-textField" id="login" required name="username" placeholder="Email Address">
            </div>
            
            <div class="input-group pb-15">
                <span class="login-bookswap-textField input-group-addon glyphicon glyphicon-lock" style="margin-bottom: 1px !important;"></span>
                <input type="password" class="login-bookswap-textField" id="login" required name="password" placeholder="Password">
            </div>

            <div class="text-center pt-15">
                <button type="submit" class="btn sign-in-button btn-lg" id="round">SIGN IN ></button>
            </div>

            <div class="text-center pt-15 pb-40">
                <span class="forgot-password text-color font14">Forgot password?</span>
            </div>
            
        </form>
    </div>
</body>  
<body class="bookswap-body" style="">
    
    <h1 class="title pt-40">Welcome <span class="lowercase">to</span> BookSwap, {{ username }}</h1>
    <h4 class="subtitle font300 pb-30">Please search for a book of your choice</h4>

    <div class="form-container-search">
        <form method="POST" action="/searchresults">
            <table align="center">
                <tr>
                	<td>
                		<div class="text-center">
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control text-center width170 index" name="search" id="round-inputleft" placeholder="ISBN, Author or Title">
                            <span class="input-group-btn">
                                <button class="btn btn-default btn-lg" id="round-inputright" type="submit">
                                    <span class="glyphicon glyphicon-search" id="search-dimension" aria-hidden="true"></span>
                                </button>
                            </span>
                        </div>
                        </div>
                                            <!-- /input-group -->
                    </td>
                </tr>
                <tr>
                    <td align="center">
                        <div class="text-color">-Or-</div>
                    </td>
                </tr>
            </table>
        </form>
            
        <form method="POST" action="/searchresults">
        	<table align="center">
                <tr>
                    <td>
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control input-lg text-center width240 index" name="university" id="round" placeholder="College or University">
                        </div>     
                    </td>

                    <td>
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control input-lg text-center width240 index" name="department" id="round" placeholder="Subject or Department">
                        </div>
                    </td>
                    
                    <td>
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control text-center width170 index" name="course" id="round-inputleft" placeholder="Course or Course Number">
                            <span class="input-group-btn">
                                <button class="btn btn-default btn-lg" id="round-inputright" type="submit">
                                    <span class="glyphicon glyphicon-search" id="search-dimension" aria-hidden="true"></span>
                                </button>
                            </span>
                        </div>
                    </td>
                </tr>
            </table>
        </form>
    </div>

    <div class="hero-img-block pt-10">
        <div class="hero-img-element">
            <a class="block-element" href="/"><img src="/img/hero-1.png" class="width100"></a>
        </div>

        <div class="hero-img-element">
            <a class="block-element" href="/"><img src="/img/hero-2.png" class="width100"></a>
        </div>

        <div class="hero-img-element">
            <a class="block-element" href="/"><img src="/img/hero-3.png" class="width100"></a>
        </div>
    </div>

</body>

